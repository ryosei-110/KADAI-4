<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag abc.get_profile_image(100, 100)%>
        <table class="table">
          <tbody>
            <tr>
	            <th>name</th>
	            <th><%= abc.name %></th>
            </tr>
           <tr>
	            <th>introduction</th>
	            <th><%= abc.introduction %></th>
            </tr>
          </tbody>
        </table>


      <div class="row">
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book do |f| %>
      <h4>title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %><br>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>